<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="Command.WordCount"
            name="Word-Count">
      </command>
      <command
            id="Command.WordCountPackage"
            name="Package Wordcount">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="Definition.IsInECL">
         <with
               variable="activeEditorId">
            <equals
                  value="ecl_editor.editor">
            </equals>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="wordcount.handlers.WordCount_Menu"
            commandId="Command.WordCount">
         <enabledWhen>
            <test
                  forcePluginActivation="true"
                  property="name.editor.empty.IsECLEditorNotEmpty">
            </test>
         </enabledWhen>
      </handler>
      <handler
            class="wordcount.handlers.WordCount_Package"
            commandId="Command.WordCountPackage">
         <enabledWhen>
            <and>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                        <and>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="ecl">
                           </test>
                           <test
                                 forcePluginActivation="true"
                                 property="name.file.empty.IsECLFileNotEmpty">
                           </test>
                        </and>
                     </adapt>
                  </iterate>
               </with>
            </and>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="Wordcount_Toolbar">
            <command
                  commandId="Command.WordCount"
                  icon="wc_letter_logo_20142.jpg"
                  style="push"
                  tooltip="Get the word count for the document">
               <visibleWhen>
                  <reference
                        definitionId="Definition.IsInECL">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="ECL">
            <command
                  commandId="Command.WordCount"
                  label="Word Count"
                  style="push">
               <visibleWhen>
                  <reference
                        definitionId="Definition.IsInECL">
                  </reference>
               </visibleWhen>
            </command>
            <visibleWhen>
               <reference
                     definitionId="Definition.IsInECL">
               </reference>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:ecl_editor.editor.EditorContext?after=additions">
         <command
               commandId="Command.WordCount"
               label="Word Count"
               style="push">
            <visibleWhen>
               <reference
                     definitionId="Definition.IsInECL">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:edit?after=additions">
         <command
               commandId="Command.WordCount"
               label="Word Count"
               style="push">
            <visibleWhen>
               <reference
                     definitionId="Definition.IsInECL">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
         <command
               commandId="Command.WordCountPackage"
               label="Word Count"
               style="push">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="ecl">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="wordcount.proptesters.EmptyEditorPropertyTester"
            id="Tester.IsECLEditorNotEmpty"
            namespace="name.editor.empty"
            properties="IsECLEditorNotEmpty"
            type="java.lang.Object">
      </propertyTester>
      <propertyTester
            class="wordcount.proptesters.EmptyFilePropertyTester"
            id="Tester.IsECLFileNotEmpty"
            namespace="name.file.empty"
            properties="IsECLFileNotEmpty"
            type="org.eclipse.core.resources.IResource">
      </propertyTester>
   </extension>

</plugin>
